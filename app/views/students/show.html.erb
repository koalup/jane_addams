<h1>Show Student</h1>
<p><%= notice %></p>
<fieldset>
  <legend><%= "#{@student.display_name}" %> - <%= link_to 'Edit', edit_student_path(@student) %></legend>
  <dl>
    <dt>Graduation Year</dt>
    <dd><%= @student.graduation_year %></dd>
    <dt>Grade</dt>
    <dd><%= @student.grade %></dd> 
    <dt>Teacher</dt>
    <dd><%= link_to @student.teacher.display_name, @student.teacher if @student.teacher %></dd> 
    <dt>Room</dt>
    <dd><%= @student.teacher.location if @student.teacher %></dd> 
    <dt>Properties</dt>
      <dd>PTSA Member: <b><%= @student.ptsa_member ? 'yes' : 'no' %></b></dd>
      <dd>PTSA Member Id: <b><%= @student.ptsa_member_id ? 'yes' : 'no' %></b></dd>
      <dd>Yearbook: <b><%= @student.yearbook ? 'yes' : 'no' %></b></dd>
      <dd>Yearbook Qty: <b><%= @student.yearbook_qty %></b></dd>
    
  </dl>
  <fieldset>
    <legend>Parents</legend>
    <%= render 'layouts/parent_list' %>  
  </fieldset>
</fieldset>
