<% form_for(@parent) do |f| %>
  <%= f.error_messages %>

<fieldset>
  <legend><%= "#{@parent.display_name}" %></legend>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %><br />
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %><br />
  </div>
  <div class="field">
    <%= f.label :home_phone %><br />
    <%= f.text_field :home_phone %><br />
  </div>
  <div class="field">
    <%= f.label :cell_phone %><br />
    <%= f.text_field :cell_phone %><br />
  </div>
  <div class="field">
    <%= f.label :address_line_1 %><br />
    <%= f.text_field :address_line_1 %><br />
  </div>
  <div class="field">
    <%= f.label :address_line_2 %><br />
    <%= f.text_field :address_line_2 %><br />
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %><br />
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %><br />
  </div>
  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip %><br />
  </div>
  <div class="field">
    <%= f.label :show_cell_phone %><br />
    <%= f.check_box :show_cell_phone %><br />
  </div>
  <div class="field">
    <%= f.label :mailing_list %><br />
    <%= f.check_box :mailing_list %><br />
  </div>
  <div class="field">
    <%= f.label :ptsa_member %><br />
    <%= f.check_box :ptsa_member %><br />
  </div>
  <div class="field">
    <%= f.label :publish %><br />
    <%= f.check_box :publish %><br />
  </div>
</fieldset>

<fieldset>
  <legend>Children</legend>
  <% @students.each do |student| %>
    <%= check_box_tag("parent[student_list][#{student.id}]","1",@parent.students.detect{|d| d == student}) %>
    <%= "#{student.display_name}" %> <br />
  <% end %>
</fieldset>
  <div class"actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
